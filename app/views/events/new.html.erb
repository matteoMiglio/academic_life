<h1><%= @group.name %></h1>

<div class="card event-form">
  <div class="card-body">
    <h5 class="card-title">Crea un nuovo evento</h5>
    <%= form_for [@message_board.id, @group.id, @event], url: message_board_group_events_url(@message_board, @group, @event) do |f| %>
      <%= render 'shared/errors', object: f.object %>
      
      <div class="form-group">
        <label for="event_name">Nome</label>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <label for="event_description">Descrizione</label>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <label for="event_appointment">Data di ritrovo</label>
        <%= f.datetime_field :appointment, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
      </div>

      <div class="form-group">
        <label for="event_place">Luogo di ritrovo</label>
        <%= f.text_field :place, class: 'form-control' %>
      </div>

      <%= f.hidden_field :role, :value => "role" %>
      <%= f.hidden_field :group_id, :value => @group.id %>
      <%= f.submit "Crea", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
