<ul class="groups">
  <%= render @group %>
</ul>

<div class="card">
  <div class="card-header text-center">
    Eventi
  </div>
  <div class="card-body">
    <% if @events.any? %>
      <ul class="list-group list-group-flush">
        <%= render @events %>
      </ul>
      
      <%= will_paginate @comments, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
    <% else %>
      <h5 align="center"> Non sono ancora presenti eventi per questo gruppo </h5>
    <% end %>
  </div>
</div>