<li id="group-<% group.id %>" class="group">
  <div class="card text-center">
    <div class="card-body">
      <h5 class="card-title"> <%= group.name %> </h5>
      <p class="card-text"> Membri: <%= group.members.length %> </p>
      <p class="card-text"> Ruolo:
        <% role = membership(group.members) %>
        <span class="badge badge-<%= color(role) %>"> <%= role %> </span>
      </p>
    </div>
    <div class="card-footer text-muted text-center">
    <% if current_page?(action: 'index') %>
      <%= link_to "Show", message_board_group_url(@message_board, group.id), class: "card-link" %>
    <% else %>
      <%= accept_link role, "#" %>
      <%= exit_link role, "#" %>
      <%= members_link role, message_board_group_members_url(@message_board, group.id) %>
    <% end %>
    </div>
  </div>
</li>
