<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
    <p>La form contiene <%= pluralize(object.errors.count, "errore", "errori") %>:
      <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </p>
  </div>
<% end %>