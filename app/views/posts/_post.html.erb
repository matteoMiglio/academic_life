<li id="post-<% post.id %>">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= post.user.name %> <%= post.user.surname %></h5>
      <p class="card-text"><%= post.description %></p>
      <a class="card-link"> 
        <%= link_to "Show", message_board_post_url(@message_board, post.id) %>
      </a>
    </div>
    <div class="card-footer text-muted text-center">
      <%= time_ago_in_words(post.updated_at) %>
    </div>
  </div>
</li>