<li id="post-<% post.id %>" class="post">
  <div class="card">
    <div class="card-body row">
      <div class="col-1 px-2">
        <%=  render 'approvals/approval', :post => post, 
                                          :pre_approval => find_my_approval(post.approvals),
                                          :approvals_count => post.approvals.length %>
      </div>
      <div class="col">
        <h5 class="card-title"><%= post.user.name %> <%= post.user.surname %></h5>
        <p class="card-text"><%= post.description %></p>
        <%= show_link(post) %>
        <%= delete_link(post) %>
      </div>
    </div>
    <div class="card-footer text-muted text-center">
      <%= time_ago_in_words(post.updated_at) %> ago
    </div>
  </div>
</li>
