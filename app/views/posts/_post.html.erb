<li id="post-<% post.id %>">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-2 col-md-1" align="center">

            <% pre_approval = post.approvals.find { |approval| approval.user_id == current_user.id} %>
            <% if pre_approval %>
              <%= button_to "Disapprova", post_approval_url(post.id, post.approvals), method: :delete, remote: true, class: 'btn btn-link text-dark' %>
            <% else %>
              <%= button_to "Approva", post_approvals_url(post.id), method: :post, remote: true, class: 'btn btn-link text-dark' %>
            <% end %>

          <p id="count-approval-label-<%= post.id %>" class="my-0"> <%= post.approvals.count %> </p>

        </div>
        <div class="col">
          <h5 class="card-title"><%= post.user.name %> <%= post.user.surname %></h5>
          <p class="card-text"><%= post.description %></p>
          <a class="card-link">
            <%= link_to "Show", message_board_post_url(@message_board, post.id) %>
          </a>
        </div>
      </div>
    </div>
    <div class="card-footer text-muted text-center">
      <%= time_ago_in_words(post.updated_at) %>
    </div>
  </div>
</li>
