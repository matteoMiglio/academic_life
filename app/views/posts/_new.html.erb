<div class="card post-form">
  <div class="card-body">
    <h5 class="card-title">Pubblica un nuovo post</h5>
    <%= form_for [@message_board, @new_post] do |f| %>
      <%= render 'shared/errors', object: f.object %>
      <div class="form-group">
        <%= f.text_area :description, class: "form-control" %>
        <%= f.hidden_field :message_board_id, :value => @message_board.id %>
      </div>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>